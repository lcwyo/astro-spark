{
	"$schema": "https://json.schemastore.org/tsconfig",

	"extends": "astro/tsconfigs/strict",

	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ES2022",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"stripInternal": true,
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	}
}
